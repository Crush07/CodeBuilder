<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hysea.hyseaappapi.dao.HyBlogTagMapper">
	
	<select id="selectCountByTagId" resultType="java.lang.Integer">
		select count(*) 
		from hy_blog_tag 
		where tag_id = #{tagId}
	</select>
	
	<select id="selectAllByTagId" resultMap="HyBlogTag">
		select * 
		from hy_blog_tag 
		where tag_id = #{tagId}
	</select>
	
	<delete id="deleteHyBlogTagByTagId">
		delete from hy_blog_tag
		where tag_id = #{tagId}
	</delete>
	
	<update id="updateHyBlogTagByTagId">
		update hy_blog_tag
		<trim prefix="set" suffixOverrides=",">
			<if test="createTime != null">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>
			<if test="id != null">
				id = #{id},
			</if>
			<if test="blogId != null">
				blog_id = #{blogId},
			</if>
		</trim>
		where tag_id = #{tagId}
	</update>
	
	<insert id="batchInsertHyBlogTag" keyProperty="id" useGeneratedKeys="true">
		insert into hy_blog_tag (`tag_id`,`create_time`,`update_time`,`id`,`blog_id`)
		values
		<foreach collection="hyBlogTagList" item="hyBlogTag" index="index" separator=",">
			(#{hyBlogTag.tagId},#{hyBlogTag.createTime},#{hyBlogTag.updateTime},#{hyBlogTag.id},#{hyBlogTag.blogId})
		</foreach>
	</insert>
	
	<insert id="insertHyBlogTag" keyProperty="id" useGeneratedKeys="true">
		insert into hy_blog_tag (`tag_id`,`create_time`,`update_time`,`id`,`blog_id`)
		values
		(#{tagId},#{createTime},#{updateTime},#{id},#{blogId})
	</insert>
	
	<select id="selectAll" resultMap="HyBlogTag">
		select * 
		from hy_blog_tag 
	</select>
	
	
	<resultMap id="HyBlogTag" type="com.hysea.hyseaappapi.entity.po.HyBlogTag">
		<result column="tag_id" property="tagId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="id" property="id"/>
		<result column="blog_id" property="blogId"/>
	</resultMap>
</mapper>
